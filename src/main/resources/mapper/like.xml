<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.trip.domain.like.mapper.LikeMapper">

    <resultMap id="like" type="like">
        <result column="user_id" property="userId"></result>
        <result column="spot_id" property="spotId"></result>
    </resultMap>

    <insert id="insert" parameterType="comment">
        insert into `like` (user_id, spot_id, created_at, updated_at)
        values (${userId}, ${spotId}, now(), now())
    </insert>

    <delete id="delete" parameterType="long">
        delete from `like` where id = ${likeId}
    </delete>

    <select id="count" parameterType="long" resultType="int">
        select count(*)
        from `like`
        where spot_id = ${spotId}
    </select>

</mapper>